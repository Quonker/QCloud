@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            
            <a asp-controller="Files" asp-action="Create" class="mainColor" style="text-align: center">
                <div class="folderTools">
                    <img src="~/FileExtensions/folder-7.svg" style="width: 22%;" alt="Add File" />
                    <span style="margin-left: 8px;" >Add File</span>
                </div>
            </a>
         </li>
    </ul>
}

